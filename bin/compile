#!/bin/bash


indent() {
  sed -u 's/^/       /'
}

echo "-----> Found a .vendor_urls file"

# Bail early but noisily
if [ ! -s $1/.vendor_urls ]; then
  echo ".vendor_urls empty. Skipping." | indent
  exit 0
fi

cd $1

while read url; do
  if [ -n "$url" ]; then # incase ensure_newline_at_eof_on_save is enabled
    echo Vendoring $url | indent
    curl -L --silent $url | tar xz
  fi
done < .vendor_urls

cat >bin/nginx<<EOF
#!/bin/bash

# Generate config files:
sed -e "s/herokuport/$PORT/g" conf/nginx.sh > /app/conf/nginx.conf

cat /app/conf/nginx.conf

# Start nginx:
sbin/nginx -c /app/conf/nginx.conf
EOF

chmod +x bin/nginx
